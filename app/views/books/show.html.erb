<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user:@user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @books %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tbody>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image(100,100) %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            <%end%>
            
             <!--以下、いいね機能部分テンプレート＋非同期-->
          <td class= <%= "favorite_btn-" + @book.id.to_s %>>
            <%= render "favorites/favorite", book: @book %>
          </td>
          <td><%= @book.post_comments.count %>コメント</td>
        </tr>
        </tbody>
      </table>
        <!--以下、コメント一覧-->
      <table>
        
          <% @book.post_comments.each do |post_comment| %>
            <tr>
            <td><%= image_tag post_comment.user.get_profile_image(100,100) %></td>
            <td><%= post_comment.comment %></td>
              <!--コメント一覧機能部分テンプレート、非同期-->
              <td class=<%= "comment_btn-" + post_comment.id.to_s %>>
                <%= render "comments/comment_delete",  post_comment: post_comment %>
              </td>
            </tr>
          <%end%>
        
      </table>
      
      <div class=<%="comment_btn-"%>>
        <%= render "comments/post_comment", book: @book, post_comment: @post_comment %>
      </div>
    </div>
  </div>
</div>